{
  "compilerOptions": {
    "jsx": "react-jsx",
    // "compilerOptions": { "jsx": "react-jsx"
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    // "target": "ES6",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2020"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "./scratch"
  ]
}